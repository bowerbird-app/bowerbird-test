<div class="card shadow p-5">
  <div class="card-body">
    <h1 class="card-title">Images</h1>

    <div class="tag-filters mb-3">
      <% @images.tags_with_count(with_total: true).each do |k, v| %>
        <%= link_to "#{k} (#{v})", images_path(tags: k), class: "btn btn-light rounded-pill" %>
      <% end %>
    </div>

    <%= form_with method: :get do |f| %>
      <div class="row">
        <div class="col-lg-11 col-md-11 col-10">
          <%= f.text_field :query, placeholder: "Search", class: "form-control" %>
        </div>
        <div class="col-lg-1 col-md-1 col-1">
          <%= f.button class: "btn btn-light" do %>
            <i class="bi bi-search"></i>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Tags</th>
            <th class="text-center">Total tags</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td><%= image_tag image.file.url, alt: image.name, class: 'rounded', size: 100 %></td>
              <td>
                <strong><%= image.name %></strong><br />
                <%= number_to_human_size image.file.size %>
              </td>
              <td>
                <% image.tags.each do |tag| %>
                  <%= link_to tag.name, tag_path(tag), class: "btn btn-light btn-sm rounded-pill mb-2" %>
                <% end %>
              </td>
              <td class="text-center">
                <%= image.tags.size %>
              </td>
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to "View", image_path(image), class: "dropdown-item" %></li>
                    <li><%= link_to "Edit", edit_image_path(image), class: "dropdown-item" %></li>
                    <li><%= link_to "Delete", image_path(image), class: "dropdown-item", method: :delete %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

