<div class="py-5 px-4" style="background-color: #f1f1f1; min-height: calc(100vh - 58px);">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body p-0">
            <div class="p-4">
              <h4 class="card-title mb-4">
                <span style="font-size: 32px; line-height: 40px; font-weight: normal;">Tags / <%= @tag.name %></span>
              </h4>
            <%= render partial: 'shared/search_bar', locals: { search_path: tag_path } %>
            <%= render partial: 'shared/images_table', locals: { images: @images, sort_path: tag_path(query_params.merge(sort_by: reverse_sort_by)), current_sort_by: current_sort_by } %>
            <%== pagy_bootstrap_nav(@pagy) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>