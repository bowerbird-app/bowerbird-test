<div class="container">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= alert_mappings[type.to_sym] %> alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>